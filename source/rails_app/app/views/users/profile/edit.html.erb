<h2>Edit Profile</h2>

<%= form_for(current_user, url: users_profile_edit_path, html: {method: :post}) do |form| %>

  <div class="form-group">
    <%= form.label :user_name %><br />
    <%= form.text_field :user_name, autocomplete: "off", :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :email %><br />
    <%= form.email_field :email, autocomplete: "email", :class => "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit "Update", :class => "btn btn-primary" %>
  </div>
<% end %>



<%= form_for(current_user, url: destroy_user_registration_path, html: {method: :post}) do |form| %>
  <div class="actions">
    <%= form.submit "Destroy", :class => "btn btn-danger" %>
  </div>
<% end %>
<%
# 時間選択
# @params form        [form_helper]
# @params field_name  [string]
# @params label_name  [string]

label_name = field_name if label_name.nil?
%>

<div class="form-group row">
  <%= form.label(:label_name, :class => "col-form-label col-md-2") %>
  <div class="col-md-8">
    <div class="input-group view_parts_form_input_time">
      <%= form.time_field(:field_name, :style => "background-color:#fff", :class => "form-control", :data => { :input => "" }) %>
      <div class="input-group-append" data-toggle>
        <span class="input-group-text"><i class="far fa-clock"></i></span>
      </div>
      <div class="input-group-append" data-clear>
        <span class="input-group-text"><i class="fas fa-times"></i></span>
      </div>
    </div>
  </div>
</div>

<% unless defined?(@view_parts_form_input_time) %>
  <% @view_parts_form_input_time = true %>

  <script>
    $(document).ready(function(){
      flatpickr(".view_parts_form_input_time",
                { wrap: true,
                  enableTime: true,
                  noCalendar: true,
                  time_24hr: true 
                });
    });
  </script>
<% end %>
<%
# 日付け選択
# @params form        [form_helper]
# @params field_name  [string]
# @params label_name  [string]

label_name = field_name if label_name.nil?
%>

<div class="form-group">
  <%= form.label(label_name) %>
  <div class="input-group view_parts__form__input_date">
    <%= form.text_field(field_name, :style => "background-color:#fff", :class => "form-control", :data => { :input => "" }) %>
    <div class="input-group-append" data-toggle>
      <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
    </div>
    <div class="input-group-append" data-clear>
      <span class="input-group-text"><i class="fas fa-times"></i></span>
    </div>
  </div>
</div>


<% if @view_parts[__FILE__].nil? %>
  <% @view_parts[__FILE__] = true %>

  <script>
    $(document).ready(function(){
      flatpickr(".view_parts__form__input_date", { wrap: true });
    });
  </script>
<% end %>
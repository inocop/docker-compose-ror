<%
# アラートmodal
# @params modal_id [string]
# @params title    [string]
# @params message  [string]
# @params action   [string] HTMLタグ
# @params backdrop [boolean]

title   = "" unless defined?(title)
message = "" unless defined?(message)
action  = "" unless defined?(action)
backdrop = defined?(backdrop) ? "static" : "false"
%>

<!-- Modal -->
<div class="modal fade" id="<%= modal_id %>" data-backdrop="<%= backdrop %>" tabindex="-1" role="dialog" aria-labelledby="<%= modal_id %>-label" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="<%= modal_id %>-label"><%= title %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p><%= nl2br(message) %></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= raw action %>
      </div>
    </div>
  </div>
</div>

<h2><%= t('.title') %></h2>

<%= form_with(model: current_user, url: profile_edit_path, html: {method: :post}, local: true) do |form| %>

  <div class="form-group">
    <%= form.label :name %><br />
    <%= form.text_field :name, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :email %><br />
    <%= form.email_field :email, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="mt-4">
    <%= form.submit(get_action_text, :class => "btn btn-primary mr-3") %>
    <button type="button" class="btn btn-danger mr-3" data-toggle="modal" data-target="#delete_user"><%= t('text.action.delete') %></button>
  </div>
<% end %>


<% delete_action = link_to(t('text.action.delete'), destroy_user_registration_path, :method => :delete, :class => "btn btn-danger") %>
<%= render(:partial => "view_parts/modal/alert",
           :locals => { :modal_id => "delete_user", :title => "削除", :message => "アカウントを削除しますか？", :action => delete_action}) %>

<h2><%= t('.title') %></h2>

<%= form_with(model: current_user, url: profile_edit_image_url, html: {method: :post, multipart: true}, local: true) do |form| %>
  <%= render(partial: "view_parts/form/input_file", locals: {form: form, field_name: :image}) %>

  <div>
    <%= form.submit(get_action_text, class: "btn btn-primary") %>
  </div>
<% end %>
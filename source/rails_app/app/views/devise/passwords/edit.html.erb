<div class="mx-auto" style="width: 580px;">

  <h2 class="mt-5 border-bottom">
    <%= t('.change_your_password')%>
  </h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <% if resource.errors.present? %>
      <p class="alert alert-danger" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <%= simple_format(resource.errors.full_messages.join("\n"), {}, {wrapper_tag: "span"}) %>
      </p>
    <% end %>
    <%= f.hidden_field :reset_password_token %>

    <%= render(partial: "view_parts/form/input_password", locals: {form: f,
                                                                   field_name: :password,
                                                                   label_name: "#{t('.new_password')} (#{@minimum_password_length}文字以上)",
                                                                   autofocus: true}) %>
    <%= render(partial: "view_parts/form/input_password", locals: {form: f,
                                                                   field_name: :password_confirmation,
                                                                   label_name: t('.confirm_new_password')}) %>

    <div class="mt-3">
      <%= f.submit("Change my password", class: "btn btn-info mx-auto d-block") %>
    </div>
  <% end %>

  <%#= render "devise/shared/links" %>
</div>
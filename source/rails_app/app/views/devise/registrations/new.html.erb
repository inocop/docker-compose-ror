<div class="mx-auto" style="width: 580px;">

  <h2 class="mt-5 border-bottom">
    <%= t('.sign_up')%>
  </h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <% if resource.errors.present? %>
      <p class="alert alert-danger" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <%= simple_format(resource.errors.full_messages.join("\n"), {}, {wrapper_tag: "span"}) %>
      </p>
    <% end %>


    <%= render(partial: "view_parts/form/input_text", locals: {form: f,
                                                               field_name: :name,
                                                               autofocus: true}) %>
    <%= render(partial: "view_parts/form/input_email", locals: {form: f,
                                                               field_name: :email}) %>

    <%= render(partial: "view_parts/form/input_password", locals: {form: f,
                                                                   field_name: :password,
                                                                   label_name: "#{t('.password')} (#{@minimum_password_length}文字以上)",
                                                                   autofocus: true}) %>
    <%= render(partial: "view_parts/form/input_password", locals: {form: f,
                                                                   field_name: :password_confirmation,
                                                                   label_name: t('.password_confirmation')}) %>

    <div class="mt-3">
      <%= f.submit "Sign up", class: "btn btn-primary mx-auto d-block" %>
    </div>
  <% end %>

  <%#= render "devise/shared/links" %>
</div>
<h1>Show Ticket</h1>

<div class="form-group row border-bottom">
  <p class="col-3 col-md-2">
    <%= t('activerecord.attributes.ticket.name') %>
  </p>
  <p class="col-8"><%= @ticket.name %></p>
</div>

<div class="form-group row border-bottom">
  <p class="col-3 col-md-2">
    <%= t('activerecord.attributes.ticket.comment') %>
  </p>
  <p class="col-8"><%= @ticket.comment %></p>
</div>

<div class="form-group row border-bottom">
  <p class="col-3 col-md-2">
    <%= t('activerecord.attributes.ticket.status') %>
  </p>
  <p class="col-8"><%= Ticket::STATUS_LIST[@ticket.status] %></p>
</div>

<div class="form-group row border-bottom">
  <p class="col-3 col-md-2">
    <%= t('activerecord.attributes.ticket.work_time') %>
  </p>
  <p class="col-8"><%= l(@ticket.work_time, :format => :time) if @ticket.work_time.present? %></p>
</div>

<div class="form-group row border-bottom">
  <p class="col-3 col-md-2">
    <%= t('activerecord.attributes.ticket.start_date') %>
  </p>
  <p class="col-8"><%= @ticket.start_date %></p>
</div>

<div class="form-group row border-bottom">
  <p class="col-3 col-md-2">
    <%= t('activerecord.attributes.ticket.end_date') %>
  </p>
  <p class="col-8"><%= @ticket.end_date %></p>
</div>

<div class="form-group row border-bottom">
  <p class="col-3 col-md-2">担当者</p>
  <p class="col-8"><%= @ticket.user.email %></p>
</div>


<%= link_to 'Edit', edit_ticket_path(@ticket), :class => "btn btn-primary" %>
<%= link_to 'Back', tickets_path, :class => "btn btn-primary ml-3" %>

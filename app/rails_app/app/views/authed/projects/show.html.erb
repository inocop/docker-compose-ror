<h1>Show Project</h1>

<div class="form-group row border-bottom">
  <p class="col-3 col-md-2">
    <%= t('.name') %>
  </p>
  <p class="col-8"><%= @project.name %></p>
</div>

<div class="form-group row border-bottom">
  <p class="col-3 col-md-2">
    <%= t('.summary') %>
  </p>
  <p class="col-8"><%= @project.summary %></p>
</div>

<div class="form-group row border-bottom">
  <p class="col-3 col-md-2">
    <%= t('.start_date') %>
  </p>
  <p class="col-8"><%= @project.start_date %></p>
</div>

<div class="form-group row border-bottom">
  <p class="col-3 col-md-2">
    <%= t('.end_date') %>
  </p>
  <p class="col-8"><%= @project.end_date %></p>
</div>

<div class="mt-4">
  <%= link_to t('text.action.edit'), edit_project_path(@project), class: "btn btn-primary mr-3" %>
  <button type="button" class="btn btn-danger mr-3" data-toggle="modal" data-target="#delete_project"><%= t('text.action.delete') %></button>
</div>

<% delete_action = link_to(t('text.action.delete'), project_path(@project), method: :delete, class: "btn btn-danger") %>
<%= render(partial: "view_parts/modal/alert",
           locals: { modal_id: "delete_project", title: "プロジェクト削除", message: "#{@project.name} を削除しますか？", action: delete_action}) %>


<div class="mt-4">
  <%= link_to(t('text.action.back'), projects_path, class: "btn btn-primary mr-3") %>
</div>
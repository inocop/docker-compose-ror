<h1><%= t(".title") %></h1>

<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th><%= t(".name") %></th>
        <th><%= t(".start_date") %></th>
        <th><%= t(".end_date") %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= project.name %></td>
          <td><%= project.start_date %></td>
          <td><%= project.end_date %></td>
          <td><%= link_to t('text.action.show'), project %></td>
          <td><%= link_to t('text.action.edit'), edit_project_path(project) %></td>
          <td><%= link_to t('text.action.delete'), project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to t("text.action.new"), new_project_path, class: "btn btn-primary" %>

<br>
<div class="d-flex justify-content-center">
  <%= paginate @projects %>
</div>
<br>

<h2><%= t('.title') %></h2>

<%= form_with(model: current_user, url: profile_edit_path, html: {method: :post}, local: true) do |form| %>

  <div class="form-group">
    <%= form.label :name %><br />
    <%= form.text_field :name, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :email %><br />
    <%= form.email_field :email, autocomplete: "email", class: "form-control" %>
  </div>

  <div>
    <%= form.submit(get_action_text, class:"btn btn-primary") %>
  </div>
<% end %>



<%= form_for(current_user, url: destroy_user_registration_path, html: {method: :post}) do |form| %>
  <div class="mt-4">
    <%= form.submit("Destroy", class: "btn btn-danger") %>
  </div>
<% end %>